{
    "extends": ["joyn", "joyn/presets/node"],

    "settings": {
        "import/ignore": ["ramda"]
    },

    "rules": {
        "camelcase": "off",
        "import/no-unresolved": ["error", { "ignore": ["ava", "ramda"] }]
    },

    "overrides": [
        {
            "files": ["prettier.config.js"],
            "extends": ["joyn/presets/commonjs"]
        },
        {
            "files": ["bin/**/*.js", "lib/**/*.js", "test/**/*.js"],
            "extends": ["joyn/presets/esm"]
        },
        {
            "files": ["test/**/*.js"],
            "plugins": ["ava"],
            "rules": {
                "max-statements": "off",
                "ava/no-only-test": "error"
            }
        }
    ]
}
