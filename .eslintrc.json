{
    "extends": ["joyn", "joyn/presets/esm", "joyn/presets/node"],

    "rules": {
        "camelcase": "off",
        "import/no-unresolved": ["error", { "ignore": ["ava"] }],
        "node/no-unsupported-features/es-syntax": "off",
        "import/extensions": "off"
    },

    "overrides": [
        {
            "files": ["**/*.ts"],
            "extends": "joyn/presets/typescript",
            "parserOptions": {
                "project": ["**/tsconfig.sources.json", "**/tsconfig.unit-tests.json"]
            },
            "rules": {
                "import/no-unresolved": "off"
            }
        },
        {
            "files": ["test/**/*.js"],
            "plugins": ["ava"],
            "rules": {
                "max-statements": "off",
                "ava/no-only-test": "error"
            }
        }
    ]
}
